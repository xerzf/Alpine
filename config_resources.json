{
	"ociVersion": "1.0.0",
	"process": {
		"terminal": false,
	"args": [
			"sh"
		],
		"env": [
                        "PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
                ],
		"cwd": "/"
	},
	"root": {
		"path": "rootfs",
		"readonly": true
	},
	"mounts": [
	],
	"linux": {
	"resources": {
                        "pids": {
                                "limit": 32771
                        },
                        "hugepageLimits": [
                                {
                                "pageSize": "2MB",
                                "limit": 4194304
                                }
                        ],
                        "memory": {
                                "limit": 536870912,
                                "reservation": 536870912
                        },
                        "cpu": {
                                "quota": 1000000,
                                "period": 500000,
                                "cpus": "2-3",
                                "idle": 1
                        }
                }
	}
}

